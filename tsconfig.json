{
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esNext",
    "target": "es2021",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
